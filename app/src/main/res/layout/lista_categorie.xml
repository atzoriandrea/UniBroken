<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/ll_text"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/immagine"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_centerVertical="true" />


            <RelativeLayout
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/immagine"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_article_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true" />


                <TextView
                    android:id="@+id/autore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_article_description"
                    android:layout_marginTop="8sp" />


            </RelativeLayout>


        </RelativeLayout>

        <ImageView
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ll_text"
            android:src="@drawable/outline_navigate_next_black_18dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>